@model FactionModel

<h1>Добавить Фракцию</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capital">Столица:</label>
        <input asp-for="Capital" class="form-control" />
        <span asp-validation-for="Capital" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>     
    
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>