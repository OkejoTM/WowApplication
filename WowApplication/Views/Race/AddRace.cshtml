@model RaceModel

<h1>Добавить Расу</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartLocation">Стартовая локация:</label>
        <input asp-for="StartLocation" class="form-control" />
        <span asp-validation-for="StartLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Faction.Name" class="control-label">Фракция:</label>
        <select asp-for="Faction.Name" class="form-control">
            <option value="">-- Выберите название --</option>
            @foreach (var faction in ViewBag.Factions)
            {
                <option value="@faction.Name">@faction.Name</option>
            }
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>